---
import PrincipalButton from '../UI/PrincipalButton.tsx';
interface Props {
  title: string;
  description: string;
  link: string;
}

const { title, description, link } = Astro.props;
---

<div
  class="card md:w-80 w-full bg-white rounded-lg shadow-lg min-h-[310px] text-center card-body p-12 flex flex-col justify-between h-full border border-gray-200"
>
  <h2 class="card-title text-2xl font-bold">
    {title}
  </h2>
  <p class="card-text mt-2">{description}</p>

  <PrincipalButton link={link}> Ver Foro</PrincipalButton>

</div>
